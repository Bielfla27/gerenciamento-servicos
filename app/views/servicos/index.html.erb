<p id="notice"><%= notice %></p>

<h1>Servicos</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Tipodoservico</th>
      <th>Descricao</th>
      <th>Ajudante</th>
      <th>Material</th>
      <th>Data</th>
      <th>Valordoservico</th>
      <th>Statusdepagamento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.cliente.nome %></td>
        <td><%= servico.tipoDoServico %></td>
        <td><%= servico.descricao %></td>
        <% if servico.ajudante_id != nil %>
          <td><%= servico.ajudante.nome %></td>
          <% else %>
          <td><%= 'não possue' %></td>
        <% end %>
        <% if servico.material != nil %>
          <td><%= servico.material.nome %></td>
          <% else %>
          <td><%= 'não possue' %></td>
        <% end %> 
        <td><%= servico.data %></td>
        <td><%= servico.valorDoServico %></td>
        <td><%= servico.statusDePagamento %></td>
        <td><%= link_to 'Show', servico %></td>
        <td><%= link_to 'Edit', edit_servico_path(servico) %></td>
        <td><%= link_to 'Destroy', servico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Servico', new_servico_path %>
