<p id="notice"><%= notice %></p>

<h1>Serviços</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Serviço</th>
      <th>Descricao</th>
      <th>Ajudante</th>
      <th>Material</th>
      <th>Data</th>
      <th>Valor</th>
      <th>Status</th>
      
    </tr>
  </thead>

  <tbody>
    <% @servicos.each do |servico| %>
      <tr>
        <td><%= servico.cliente.nome %></td>
        <td><%= servico.tipoDoServico %></td>
        <td><%= servico.descricao %></td>
        <% if servico.ajudante_id != nil %>
          <td><%= servico.ajudante.nome %></td>
        <% else %>
          <td><%= 'Não possui' %></td>
        <% end %>
        <% if servico.material != nil %>
          <td><%= servico.material.nome %></td>
        <% else %>
          <td><%= 'Não possui' %></td>
        <% end %> 
        <td><%= servico.data %></td>
        <td><%= servico.valorDoServico %></td>
        <% if servico.statusDePagamento == true %>
          <td style="color:green"><%= "Pago" %></td>
        <% else %>
          <td style="color:red"><%= "Não Pago" %></td>
        <% end %>
        <td><%= link_to 'Visualizar', servico, id:"s-#{servico.cliente.nome + servico.tipoDoServico}" %></td>
        <td><%= link_to 'Editar', edit_servico_path(servico), id:"e-#{servico.cliente.nome + servico.tipoDoServico}" %></td>
        <td><%= link_to 'Apagar', servico, method: :delete, id:"d-#{servico.cliente.nome + servico.tipoDoServico}", class:"delete" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

