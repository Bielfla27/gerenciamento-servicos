<p id="notice"><%= notice %></p>

<p>
  <strong>Cliente:</strong>
  <%= @servico.cliente.nome %>
</p>

<p>
  <strong>Serviço:</strong>
  <%= @servico.tipoDoServico %>
</p>

<p>
  <strong>Descrição:</strong>
  <%= @servico.descricao %>
</p>

<p>
  <strong>Ajudante:</strong>
  <% if @servico.ajudante != nil %>
    <td><%= @servico.ajudante.nome %></td>
    <% else %>
    <td><%= 'não possue' %></td>
  <% end %>
<p>

<p>
  <strong>Material:</strong>
  <% if @servico.material != nil %>
    <td><%= @servico.material.nome %></td>
    <% else %>
    <td><%= 'não possue' %></td>
  <% end %>
<p>

<p>
  <strong>Data:</strong>
  <%= @servico.data %>
</p>

<p>
  <strong>Valor:</strong>
  <%= @servico.valorDoServico %>
</p>

<p>
  <strong>Status:</strong>
  <% if @servico.statusDePagamento == true%>
    <%= "Pago" %>
  <% else %>
    <%= "Não Pago"%>
  <% end %>
</p>

<br><br>

<%= link_to 'Editar', edit_servico_path(@servico) %> |
<%= link_to 'Voltar', servicos_path %>
